import pandas as pd

orders = pd.read_csv("clean_orders.csv")
customers = pd.read_csv("clean_customers.csv")
products = pd.read_csv("clean_products.csv")
payments = pd.read_csv("clean_payments.csv")
df = orders.merge(customers, on='customer_id', how='left')
df = df.merge(products, on='product_id', how='left')
df = df.merge(payments, on='order_id', how='left')

df.head()
df.info()
df.isnull().sum()
df['payment_status'] = df['payment_status'].fillna('No Payment')
df['payment_method'] = df['payment_method'].fillna('Unknown')
df.isnull().sum()
df = df.rename(columns={
    'price_x': 'order_price',
    'price_y': 'product_price'
})
df['revenue'] = df['quantity'] * df['order_price']
df.isnull().sum()
df['payment_id'] = df['payment_id'].fillna('No_ID')
df.isnull().sum()
#basic metrics
print("Total Revenue:", df['revenue'].sum())
print("Total Orders:", df['order_id'].nunique())
print("Total Customers:", df['customer_id'].nunique())
#top product by revenue
top_products = df.groupby('product_name')['revenue'].sum().sort_values(ascending=False)

top_products
#top product by Quantity sold
top_quantity = df.groupby('product_name')['quantity'].sum().sort_values(ascending=False)

top_quantity
category_revenue = df.groupby('category')['revenue'].sum().sort_values(ascending=False)

category_revenue
#customers Analysis

#Customers by revenue
top_customers = df.groupby('name')['revenue'].sum().sort_values(ascending=False)

top_customers
#Top 5 customers 
top_customers = df.groupby('name')['revenue'].sum().sort_values(ascending=False)

top_customers
#customers order count
customer_orders = df.groupby('name')['order_id'].count().sort_values(ascending=False)

customer_orders
df.groupby('customer_id')['revenue'].sum().sort_values(ascending=False)
# #PAyment Analysis
# This is where WE detect:
#  revenue loss
#  failed transactions
#  system issues
#payment status count
df['payment_status'].value_counts()
#revenue by payment status
payment_revenue = df.groupby('payment_status')['revenue'].sum()

payment_revenue
#failed payments revenue
failed_revenue = df[df['payment_status'] == 'Failed']['revenue'].sum()

failed_revenue
completed_revenue = df[df['payment_status'] == 'Completed']['revenue'].sum()

completed_revenue
#Time analysis
#revenue by date 
df.groupby('order_date')['revenue'].sum()
#sort by date 
daily_revenue = df.groupby('order_date')['revenue'].sum().sort_index()

daily_revenue
df.to_csv("final_dataset.csv", index=False)

